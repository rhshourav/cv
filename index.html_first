  <!--
    =============================================
    EDUCATION
    =============================================
  -->
  <section id="education" class="section">
    <div class="container">
      <div class="section-head">
        <div>
          <h2 class="section-title">Education</h2>
          <p class="section-sub">
            Short, clean, and scan-friendly. Recruiters do not read paragraphs here.
          </p>
        </div>
      </div>

      <div class="grid-3">
        <div class="card">
